<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_mainfeed_background">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:background="@drawable/custom_food_user_photo">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/defaultfood"
                android:background="@drawable/custom_food_user_photo"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/otherprofile_row_foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="Foodname"
                android:layout_margin="6dp"
                android:fontFamily="sans-serif-condensed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#aa000000"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="90dp"
                android:layout_below="@id/otherprofile_row_foodname"
                android:text="at some address "
                android:textStyle="italic"
                android:fontFamily="sans-serif-condensed"/>
            
            
            <LinearLayout
                android:id="@+id/otherprofile_ratingpart"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:padding="6dp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    android:text="Not Rated"
                    android:textSize="15sp"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#dd2F2F2F"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/otherprofile_ratingpart"/>


        </RelativeLayout>



    </LinearLayout>




</FrameLayout>