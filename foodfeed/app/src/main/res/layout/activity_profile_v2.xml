<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/profilev2toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="#2196F3"
        app:title="FoodFeed"
        android:layout_alignParentTop="true"
        app:subtitle="Profile"
        app:titleTextColor="#FFF"
        app:subtitleTextColor="#DDD"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profilev2toolbar"
        android:background="@drawable/splash_background1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="150dp"
            android:orientation="horizontal"
            android:background="#99000000"
            android:gravity="center">

            <com.pem.mustafa.servertest.Other.CustomImageView
                android:id="@+id/profilev2profileimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/customprofilphoto"
                android:src="@drawable/profile_default"/>


            <LinearLayout
                android:id="@+id/profilev2followercountbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/profilev2profileimage"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <View
                    android:layout_width="35dp"
                    android:layout_height="2dp"
                    android:background="#FFF"
                    android:layout_gravity="start|center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56"
                    android:layout_margin="5dp"
                    android:textColor="#FFF"
                    android:layout_gravity="center|center_vertical"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:background="@drawable/customrectbackground"/>

                <View
                    android:layout_width="35dp"
                    android:layout_height="2dp"
                    android:background="#FFF"
                    android:layout_gravity="end|center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/profilev2followercountbox"
                android:layout_toStartOf="@id/profilev2profileimage"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:text="Followers"
                    />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/profilev2followingcountbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profilev2profileimage"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <View
                    android:layout_width="35dp"
                    android:layout_height="2dp"
                    android:background="#FFF"
                    android:layout_gravity="start|center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35"
                    android:layout_margin="5dp"
                    android:textColor="#FFF"
                    android:layout_gravity="center|center_vertical"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:background="@drawable/customrectbackground"/>

                <View
                    android:layout_width="35dp"
                    android:layout_height="2dp"
                    android:background="#FFF"
                    android:layout_gravity="end|center_vertical"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/profilev2followingcountbox"
                android:layout_toEndOf="@id/profilev2profileimage"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:text="Following"
                    />


            </LinearLayout>





        </RelativeLayout>






    </RelativeLayout>



</RelativeLayout>