<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="170dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/foodimagev2"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="2dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="0dp"
            android:layout_marginRight="2dp"
            android:background="#80000000">
            <TextView
                android:id="@+id/foodnamev2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:text="Food name" />


            <TextView
                android:id="@+id/fooduserv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/foodnamev2"
                android:text="by Someone" />
            <TextView
                android:id="@+id/foodpricev2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/foodnamev2"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textColor="#ffffffff"
                android:text="5 TL" />

            <TextView
                android:id="@+id/foodplacev2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fooduserv2"
                android:layout_marginLeft="8dp"
                android:textColor="#ffffffff"
                android:maxLines="2"
                android:text="at some place" />

            <TextView
                android:id="@+id/fooddurationv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodplacev2"
                android:textColor="#ffffffff"
                android:layout_marginLeft="3dp"
                android:layout_alignParentEnd="true"
                android:text="15 mins ago" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/foodplacev2"
                android:layout_toLeftOf="@id/fooddurationv2"
                android:src="@drawable/ic_access_time_white_24dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>