<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/food_background_edited2">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#99000011">


        <TextView
            android:id="@+id/splashlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Feed"
            android:textStyle="normal"
            android:textColor="#FFF"
            android:textSize="40sp"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:typeface="monospace"/>

        <View
            android:id="@+id/splashdivider"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/splashlogo"
            android:background="#FFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Eat, Cook, Sell -"
            android:textStyle="normal"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:padding="12dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/splashdivider"
            android:gravity="center"
            android:typeface="monospace"/>
            <!--
            android:shadowColor="#FFF"
            android:shadowRadius="1.5"
            android:shadowDx="-1"
            android:shadowDy="-1"-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="'Komşun açken tok yatma, paylaş'"
            android:textStyle="italic"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"/>

    </RelativeLayout>

</FrameLayout>
